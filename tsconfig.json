{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/",
    "target": "ES6",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ],
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}